<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

    <changeSet id="createTable-demande" author="Team">
        <createTable tableName="Demande">
            <column name="id_demande" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false" />
            </column>
            <column name="demande_date" type="DATE" />
            <column name="date_retour" type="DATE" />
            <column name="reference" type="INT" />
            <column name="priorite" type="VARCHAR(255)" />
            <column name="state" type="VARCHAR(255)" />

        </createTable>

        <addForeignKeyConstraint baseColumnNames="user_id"
                                 baseTableName="Demande"
                                 constraintName="fk_demande_user"
                                 referencedColumnNames="user_id"
                                 referencedTableName="User"
                                 onDelete="CASCADE"/>
    </changeSet>

    <changeSet id="createTable-demande_equipement" author="Team">
        <createTable tableName="demande_equipement">
            <column name="demande_id" type="BIGINT">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="equipemnt_id" type="BIGINT">
                <constraints primaryKey="true" nullable="false" />
            </column>
        </createTable>

        <addForeignKeyConstraint baseColumnNames="demande_id"
                                 baseTableName="demande_equipement"
                                 constraintName="fk_demande_equipement_demande"
                                 referencedColumnNames="id_demande"
                                 referencedTableName="Demande"
                                 onDelete="CASCADE"/>

        <addForeignKeyConstraint baseColumnNames="equipemnt_id"
                                 baseTableName="demande_equipement"
                                 constraintName="fk_demande_equipement_equipement"
                                 referencedColumnNames="equipment_id"
                                 referencedTableName="Equipment"
                                 onDelete="CASCADE"/>
    </changeSet>

</databaseChangeLog>