<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

    <changeSet id="createTable-rental-records" author="Boutaina">
        <createTable tableName="rental_records">
            <column name="reservation_id" type="BIGINT">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="equipment_id" type="BIGINT">
                <constraints nullable="false" />
            </column>
            <column name="user_id" type="INT">
                <constraints nullable="false" />
            </column>
            <column name="reservation_date" type="TIMESTAMP" />
            <column name="return_date" type="TIMESTAMP" />
        </createTable>
    </changeSet>
</databaseChangeLog>
