<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

    <changeSet id="createTable-rental-records" author="Team">
        <createTable tableName="rental_record">
            <column name="reservation_id" type="BIGINT">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="equipment_id" type="BIGINT"/>
            <column name="user_id" type="INT">
                <constraints nullable="false" />
            </column>
            <column name="reservation_date" type="TIMESTAMP" />
            <column name="return_date" type="TIMESTAMP" />
        </createTable>


        <addForeignKeyConstraint baseColumnNames="equipment_id"
                                 baseTableName="rental_record"
                                 constraintName="fk_equipment_id"
                                 referencedColumnNames="equipment_id"
                                 referencedTableName="equipment" />

        <addForeignKeyConstraint baseColumnNames="user_id"
                                 baseTableName="rental_record"
                                 constraintName="fk_user_id"
                                 referencedColumnNames="user_id"
                                 referencedTableName="user" />
    </changeSet>

</databaseChangeLog>
