<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

    <changeSet id="createImageTable" author="author">
        <createTable tableName="Image">
            <column name="image_id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="equipment_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="image_data" type="BLOB">
                <constraints nullable="false"/>
            </column>
            <column name="image_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="image_format" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="upload_date" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>