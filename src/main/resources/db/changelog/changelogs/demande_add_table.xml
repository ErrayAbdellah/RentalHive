<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

    <changeSet id="createTable-demande" author="Team">
        <createTable tableName="demande">
            <column name="demande_id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="user_id" type="INT">
                <constraints nullable="false" />
            </column>
            <column name="demande_date" type="DATE" />
            <column name="date_retour" type="DATE" />
            <column name="reference" type="INT" />
            <column name="priorite" type="VARCHAR(255)" />
            <column name="state" type="VARCHAR(255)" />
        </createTable>

        <addForeignKeyConstraint baseColumnNames="user_id"
                                 baseTableName="demande"
                                 constraintName="fk_demande_user"
                                 referencedColumnNames="user_id"
                                 referencedTableName="user"
                                 onDelete="CASCADE"/>
    </changeSet>

</databaseChangeLog>
