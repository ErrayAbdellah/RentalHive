<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

    <changeSet id="createConditionTable" author="Team">
        <createTable tableName="condition">
            <column name="condition_id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(255)"/>
            <column name="state" type="VARCHAR(255)"/>
            <column name="contrat_id" type="BIGINT">
                <constraints nullable="false" />
            </column>
        </createTable>

        <addForeignKeyConstraint baseColumnNames="contrat_id"
                                 baseTableName="condition"
                                 constraintName="fk_condition_contrat"
                                 referencedColumnNames="contrat_id"
                                 referencedTableName="contrat"
                                 onDelete="CASCADE"/>

    </changeSet>

</databaseChangeLog>
